{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<div class="row">
			{% for article in news %}
				<div class="col-lg-4 col-md-6 mb-4">
					<div class="card">
						<img src="{{ article.image }}" class="card-img-top" alt="Image de l'article">
						<div class="card-body">
							<h5 class="card-title">
								<a href="{{ article.url }}" target="_blank">{{ article.title }}</a>
							</h5>
							<p class="card-text">Auteur :
								{{ article.source }}</p>
							<p class="card-text">Date de publication :
								{{ article.published_at|date('d/m/Y') }}</p>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
